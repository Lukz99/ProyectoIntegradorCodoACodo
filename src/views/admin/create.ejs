<%- include('../partials/headerAdmin.ejs') %>

    <main class="container"><!-- inicio cuerpo principal -->
        <section class="create_header"><!-- Inicio primer fila -->
            <h2 class="create_title">CREAR NUEVO ITEM</h2>
        </section>

        <section class="first_filter"><!-- inicio de la segunda fila -->
            <form action = "/admin/create" method="POST" class="filters" enctype="multipart/form-data">
                
                <label for="categoria" class="filter_title">Categoría:</label>
                <select id="categoria" name="categoria" class="filter_dropdown" required>
                    <option value="" hidden disabled selected>Seleccionar</option>
                    <option value="1">Figuras coleccionables</option>
                    <option value="2">Remeras</option>
                    <option value="3">Llaveros</option>
                </select>
                
                <label for="licencia" class="filter_title">Licencia:</label>
                <select id="Licencia" name="licencia" class="filter_dropdown">
                    <option value="" hidden disabled selected>Seleccionar</option>
                    <option value="1">Pokemon</option>
                    <option value="2">Star Wars</option>
                    <option value="3">Harry Potter</option>
                    <option value="4">Naruto</option>
                </select>
                
            </section>

            <section><!-- inicio de la tercera fila -->
                <div class="new_product">
                    <label for="nombre" class="complete_title">Nombre del producto:</label>
                    <input class="to_finish margen_large"type="text" name="nombre" placeholder="Kakashi Hatake Shippuden Saga"/>
                        
                </div>
                <textarea name="descripcion" rows="10" cols="40" placeholder="Descripción de producto"
                    class="product_descrip"></textarea>
                <div>
                    <label for="sku" class="complete_title">SKU:</label>
                    <input type="text" name="sku" placeholder="SSK111AB001" class="to_finish margen_medium" />
                    <label for="precio" class="complete_title">Precio:</label>
                    <span class="to_finish"><span class="">$</span>
                        <input type="text" name="precio" placeholder="0.000,00" class="margen_medium no_border" /></span>
                    
                    <label for="stock" class="complete_title">Stock:</label>
                    <input type="text" name="stock" placeholder="0" class="to_finish margen_small" />
                </div>
                <div class="fill_option">
                        <label for="descuento" class="complete_title">Descuento:</label>
                        <span class="to_finish">
                            <input type="text" name="descuento" class="no_border" placeholder="0" />
                        <span>%</span>
                    </span>
                    <label for="cuotas" class="complete_title">Cuotas:</label>
                    <select id="cuotas" name="cuotas" class="way_to_pay">
                        <option value="3">3 cuotas sin interés</option>
                        <option value="6">6 cuotas sin interés</option>
                        <option value="12">12 cuotas sin interés</option>
                    </select>
                </div>
                <div class="upload_image">
                    <label for="imagen" class="complete_title">Imágenes:</label>
                    <input type="file" id="imagen" name="imagen" class="files_button" multiple/>
                </div>
            </section>

            <section class="btn_add_clean"><!-- inicio de la octavo fila -->
                <input type="submit" value="Agregar Producto" class="action_btn" />
                <input type="reset" value="Limpiar" class="action_btn" />
            </section>
        </form>
    </main><!--fin cuerpo principal-->

    <%- include('../partials/footerAdmin.ejs') %>
</body>
</html>